<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainRelative"
    tools:context=".travelPackage.LocationHistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/afterScan"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nameLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_default"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/imageLocation"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/nameLocation"
                    android:paddingBottom="@dimen/padding_default" />

                <TextView
                    android:id="@+id/informationLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageLocation"
                    android:paddingBottom="@dimen/padding_default"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/testing"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/informationLocation"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_button_red"
                    android:text="Пройти тестирование"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>