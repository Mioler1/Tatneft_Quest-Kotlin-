<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainRelative"
    android:padding="15dp"
    tools:context=".travelPackage.testing.QuestionOneFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Точка"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/point"
                android:layout_marginTop="10dp"
                android:text="Вопрос"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/descriptionQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question"
                android:layout_marginTop="15dp"
                android:text="описание"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/indication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionQuestions"
                android:layout_marginTop="40dp"
                android:text="Выберите правильный ответ:"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/indication"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <Button
                    android:id="@+id/answerOne"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border_button_green"
                    android:text="Ответ на первый вопрос"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/answerTwo"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerOne"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_button_green"
                    android:text="Ответ на второй вопрос"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/correctAnswer"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerTwo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_button_green"
                    android:text="Ответ на правильный вопрос"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/reply"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/correctAnswer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_button_red"
                    android:text="Ответить"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/nextQuestion"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/correctAnswer"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/ic_array"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>