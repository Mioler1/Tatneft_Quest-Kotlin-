<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainRelative"
    tools:context=".travelPackage.StartActionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/headerRelative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15">

            <TextView
                android:id="@+id/pointPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Точка 1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/name_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pointPosition"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="Главный офис ПАО Татнефть"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mapRelative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65">

            <fragment
                android:id="@+id/mapFragment"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/btnMapFullScreen"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_fullscreen"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footerRelative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="20">

            <Button
                android:id="@+id/seeingMap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_button_red"
                android:text="Открыть в навигаторе"
                android:textColor="@color/red"
                android:visibility="gone" />

            <Button
                android:id="@+id/inPlace"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/seeingMap"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_button_red"
                android:text="я уже на месте!"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnScan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/seeingMap"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_button_red"
                android:text="Сканировать"
                android:textColor="@color/white"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>