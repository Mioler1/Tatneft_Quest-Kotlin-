<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.StartActionFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:id="@+id/pointPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Точка 1"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pointPosition"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="Главный офис ПАО Татнефть"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/name_location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/seeingMap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_button_red"
                android:text="Открыть в навигаторе"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/inPlace"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_button_red"
                android:text="я уже на месте!"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnScan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_button_red"
                android:text="Сканировать"
                android:textColor="@color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/afterScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/nameLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_default"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/descriptionLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameLocation"
            android:paddingBottom="@dimen/padding_default"
            android:text="@string/empty"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/site_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_default"
            android:text="@string/empty"
            android:layout_below="@id/descriptionLocation"
            android:textStyle="bold|italic" />

    </RelativeLayout>




</RelativeLayout>